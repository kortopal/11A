{
    "name": "11/A Akıllı Tahta Eklentisi",
    "description": "Döviz takibi, zamanlayıcı ve daha birçok özelliği içerisinde barındıran akıllı tahta eklentisi ile tanışın. Kullanıcı deneyimi genetiğinde var.",
    "version": "3.6",
    "manifest_version": 3,
    "options_page": "popup.html#settings",

    "background.service_worker": {
      "scripts": ["/js/background.js"],
      "persistent": false
    },

    "permissions": [
      "storage",
      "unlimitedStorage",
      "tabs"
    ],
      
    "icons": {
      "16": "/img/16.png",
      "32": "/img/32.png",
      "48": "/img/48.png",
      "128": "/img/128.png"
    },

    "action": {
      "default_title": "11/A Akıllı Tahta Eklentisi",
        "default_popup": "popup.html",
        "default_icon": {
          "16": "/img/16.png",
          "32": "/img/32.png",
          "48": "/img/48.png",
          "128": "/img/128.png"
        }
    }
}